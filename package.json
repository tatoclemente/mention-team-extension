{
  "name": "mention-my-team",
  "displayName": "Mention my team",
  "description": "Mention team members in code comments with GitHub integration",
  "version": "0.1.1",
  "publisher": "tatoclemente-dev",
  "icon": "icon.png",
  "author": {
    "name": "tatoclemente-dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatoclemente/mention-team-extension.git"
  },
  "bugs": {
    "url": "https://github.com/tatoclemente/mention-team-extension/issues"
  },
  "homepage": "https://github.com/tatoclemente/mention-team-extension#readme",
  "keywords": [
    "github",
    "mentions",
    "team",
    "collaboration",
    "comments",
    "notifications"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "teamMentions.configure",
        "title": "Configure Team Mentions"
      },
      {
        "command": "teamMentions.scanMentions",
        "title": "Scan for Mentions"
      }
    ],
    "configuration": {
      "title": "Team Mentions",
      "properties": {
        "teamMentions.githubToken": {
          "type": "string",
          "description": "GitHub personal access token"
        },
        "teamMentions.repository": {
          "type": "string",
          "description": "Repository in format owner/repo"
        },
        "teamMentions.notificationMethod": {
          "type": "string",
          "enum": [
            "issue",
            "discussion"
          ],
          "default": "issue",
          "description": "How to send notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.0"
  }
}
